<section class="register">
    <div class="container">
        <div class="row">
            <h2>Register</h2>
            <div class="col-md-6">
                <div class="contact-form">
                    <label class="form-label" for="name"></label>
                    <input class="form-control" type="text" id="name" placeholder="Username">
                </div>
            </div>
            <div class="col-md-6">
                <div class="contact-form">
                    <label class="form-label" for="email"></label>
                    <input class="form-control" type="text" id="mail" placeholder="Mail address">
                </div>
            </div>
            <div class="col-md-6">
                <div class="contact-form">
                    <label class="form-label" for="password"></label>
                    <input class="form-control" type="mail" id="pw" placeholder="Password">
                </div>
            </div>
            <div class="col-md-6">
                <div class="contact-form">
                    <label class="form-label" for="password"></label>
                    <input class="form-control" type="text" id="pw-confirm" placeholder="Confirm Password">
                </div>
            </div>
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="contact-form">
                    <label class="form-label" for="phone"></label>
                    <input class="form-control" type="text" id="phone" placeholder="Phone number*">
                    <p><small>*optional</small></p>
                </div>
            </div>

            <!-- Conditions d'utilisation -->

            <div class="conditions mt-5">
                <div class="form-check">

                    <input type="checkbox" id="cg" class="form-check-input">

                    <p><small>I have read and accepted the<button type="button" class="btn-terms" data-bs-toggle="modal"
                                data-bs-target="#terms-modal">terms and conditions for use </button></small></p>
                    <p id="prevent"></p>
                </div>

                <a href="/login" id="submit-btn"><button type="submit" class="btn btn-log mt-5">Submit</button></a>

            </div>
        </div>
    </div>
</section>

<script src="assets/js/register.js"></script>